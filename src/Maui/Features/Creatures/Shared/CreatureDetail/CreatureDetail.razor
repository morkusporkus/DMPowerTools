<MudGrid>
    <MudItem xs="12">
        <MudText Typo="Typo.h4">@Creature.Name</MudText>
    </MudItem>
    <MudItem lg="2" xs="6">
        <MudText Typo="Typo.h6">Attributes</MudText>
        <MudGrid>
            <AttributeScore Name="STR" RawPoints="@Creature.StrPoints"/>
            <AttributeScore Name="DEX" RawPoints="@Creature.DexPoints" />
            <AttributeScore Name="CON" RawPoints="@Creature.ConPoints" />
            <AttributeScore Name="WIS" RawPoints="@Creature.WisPoints" />
            <AttributeScore Name="INT" RawPoints="@Creature.IntPoints" />
            <AttributeScore Name="CHA" RawPoints="@Creature.ChaPoints" />
        </MudGrid>
    </MudItem>
</MudGrid>
