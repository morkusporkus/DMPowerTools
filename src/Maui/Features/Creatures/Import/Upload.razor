<MudAlert Severity="Severity.Info">
    Use the button below to import one or more monsters from external sources.
    Only <b>https://tetra-cube.com</b> files (.monster) are supported at this time.
</MudAlert>

<MudFileUpload T="IReadOnlyList<IBrowserFile>" FilesChanged="UploadFilesAsync">
    <ButtonTemplate>
        <MudButton HtmlTag="label"
                   Variant="Variant.Outlined"
                   Color="Color.Info"
                   StartIcon="@Icons.Material.Outlined.ImportContacts"
                   for="@context">
            Import
        </MudButton>
    </ButtonTemplate>
</MudFileUpload>