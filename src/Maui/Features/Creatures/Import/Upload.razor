
<MudGrid>
    <MudItem xs="6">
        <MudText Typo="Typo.h3">
            Creatures
        </MudText>
    </MudItem>
    <MudItem xs="6" Class="d-flex justify-end align-center">
        <MudFileUpload T="IReadOnlyList<IBrowserFile>" FilesChanged="UploadFilesAsync">
            <ButtonTemplate>
                <MudButton HtmlTag="label"
                           Variant="Variant.Outlined"
                           Color="Color.Info"
                           StartIcon="@Icons.Material.Outlined.ImportContacts"
                           for="@context">
                    Import
                </MudButton>
            </ButtonTemplate>
        </MudFileUpload>
    </MudItem>
    <MudItem xs="12">
        <MudDivider />
    </MudItem>
</MudGrid>